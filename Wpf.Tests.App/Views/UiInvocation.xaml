<Window
    x:Class="Wpf.Tests.App.Views.UiInvocation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UI Invocation"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <GroupBox Header="UI Thread">
            <StackPanel>
                <Button Click="OnUiActionButtonClick" Content="Action" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Background Thread">
            <StackPanel>
                <Button Click="OnBackgroundActionButtonClick" Content="Action" />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
